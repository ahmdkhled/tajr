<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.tajr.tajr.view.utils.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rippleColor="@color/main_color_grey_400">

                </com.tajr.tajr.view.utils.MaterialRippleLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="64dp"
                android:src="@drawable/ic_logo" />

            <LinearLayout
                android:paddingEnd="24dp"
                android:paddingStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#50000000"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">



                    <com.tajr.tajr.view.utils.FloatLabeledEditText
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        app:fletFloatingHint="@string/email"
                        app:fletHintTextColor="@color/white"
                        app:fletSingleLine="true"
                        app:fletTextBackground="@drawable/edit_text_background_accent"
                        app:fletTextColor="@color/white"
                        app:fletTextGravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">


                    <com.tajr.tajr.view.utils.FloatLabeledEditText
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        app:fletFloatingHint="@string/prompt_password"
                        app:fletHintTextColor="@color/white"
                        app:fletPassword="true"
                        app:fletSingleLine="true"
                        app:fletTextBackground="@drawable/edit_text_background_accent"
                        app:fletTextColor="@color/white"
                        app:fletTextGravity="center" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/remember_pass"
                    style="@style/CheckBoxStyle.Dark"
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:text="@string/remember_password" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:orientation="vertical">

                <com.tajr.tajr.view.utils.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    app:rippleColor="@color/white">

                    <com.tajr.tajr.helper.font.RobotoTextView
                        android:id="@+id/loginbtn"
                        style="@style/ButtonStyle.RaisedEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:background="@color/main_color_500"
                        android:minWidth="112dp"
                        android:text="@string/login"
                        android:textColor="#fff" />
                </com.tajr.tajr.view.utils.MaterialRippleLayout>

                <com.tajr.tajr.view.utils.ProgressWheel
                    android:id="@+id/progress_log_in"
                    style="@style/ProgressBarStyle.Reverse"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:onClick="adminLogIn"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/admin_login"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
