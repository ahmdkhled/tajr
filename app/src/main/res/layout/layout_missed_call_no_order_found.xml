<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="@dimen/_16ssp"
        android:text="@string/no_order_is_found_do_you_want_to_goto_order_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.greyeg.tajr.helper.font.RobotoTextView
        android:id="@+id/go_order_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/selector_dialog_warning"
        android:gravity="center"
        android:minWidth="64dp"
        android:padding="8dp"
        android:text="@string/ok"
        android:textColor="@color/main_color_600"
        android:textSize="20sp"
        android:textStyle="bold"/>


</LinearLayout>